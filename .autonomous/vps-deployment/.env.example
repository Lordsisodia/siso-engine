# RALF VPS Deployment Environment Variables
# Copy to .env and fill in your values

# =============================================================================
# API Keys (Required)
# =============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GLM API (for VPS - if using GLM instead of Claude)
GLM_API_KEY=your_glm_api_key_here
GLM_API_BASE=https://api.glm.ai/v1

# =============================================================================
# Model Configuration
# =============================================================================

# Default model for agents
RALF_MODEL=claude-sonnet-4-5-20251101

# Alternative: Use GLM on VPS
# RALF_MODEL=glm-4.7

# Max tokens per request
RALF_MAX_TOKENS=8192

# =============================================================================
# Verification Configuration
# =============================================================================

# Confidence threshold for auto-commit (0.0 - 1.0)
RALF_VERIFY_THRESHOLD_AUTO=0.85

# Confidence threshold for queue review
RALF_VERIFY_THRESHOLD_REVIEW=0.60

# Auto-push after commit
RALF_AUTO_PUSH=true

# Notification webhook (Slack/Discord)
RALF_NOTIFY_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# Git Configuration
# =============================================================================

# Git repository URL
GIT_REPO_URL=https://github.com/yourusername/blackbox5.git

# Or SSH:
# GIT_REPO_URL=git@github.com:yourusername/blackbox5.git
# GIT_SSH_KEY_PATH=/etc/ralf/ssh/id_rsa

# Git branch to work on
GIT_BRANCH=main

# =============================================================================
# Monitoring
# =============================================================================

# Grafana admin password
GRAFANA_PASSWORD=your_secure_password_here

# =============================================================================
# VPS-Specific
# =============================================================================

# Domain name (for SSL)
RALF_DOMAIN=ralf.yourdomain.com

# Email for SSL certificates
RALF_ADMIN_EMAIL=admin@yourdomain.com

# Data directory on VPS host
RALF_HOST_DATA_DIR=/opt/ralf/data

# Project directory on VPS host
RALF_HOST_PROJECT_DIR=/opt/ralf/project
