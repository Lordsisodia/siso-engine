# Blackbox4 Brain Database Configuration
# Copy this to .env and update with your settings

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=blackbox4_brain
POSTGRES_USER=blackbox4
POSTGRES_PASSWORD=blackbox4_brain_pass

# Neo4j Configuration (optional)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=blackbox4_brain_pass

# OpenAI API (for embeddings)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Alternative: Local embeddings (sentence-transformers)
# Set to true to use local embeddings instead of OpenAI
USE_LOCAL_EMBEDDINGS=false
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# File Watcher Configuration
WATCH_DIRECTORIES=../1-agents,../2-skills,../3-plans,../4-scripts,../5-libraries,../6-modules,../8-workspaces
DEBOUNCE_SECONDS=2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=info

# Performance
BATCH_SIZE=100
MAX_WORKERS=4
CONNECTION_POOL_SIZE=10
